  <style>
    body {
      font-family: 'Segoe UI', sans-serif;
      margin: 0;
      padding: 0;
      background: linear-gradient(to right, #0f2027, #203a43, #2c5364);
      color: white;
      display: flex;
      flex-direction: column;
      align-items: center;
      min-height: 100vh;
      text-align: center;
    }

    h1 {
      margin-top: 30px;
      font-size: 2.5rem;
    }

    h2 {
      margin-bottom: 20px;
      color: #ffcc00;
    }

    #quiz-container {
      background: #1e2a38;
      padding: 30px;
      border-radius: 15px;
      width: 90%;
      max-width: 500px;
      box-shadow: 0 0 20px #00000070;
    }

    #question {
      font-size: 1.3rem;
      margin-bottom: 20px;
    }

    .option {
      background-color: #324b5f;
      border: none;
      border-radius: 10px;
      padding: 10px;
      margin: 8px 0;
      font-size: 1rem;
      cursor: pointer;
      transition: 0.2s;
      color: white;
      width: 100%;
    }

    .option:hover {
      background-color: #ffcc00;
      color: black;
    }

    #timer, #score {
      margin: 10px;
      font-weight: bold;
    }

    #result {
      margin-top: 15px;
